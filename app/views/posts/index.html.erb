<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post, class: "show_#{post.id}"%></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "edit_#{post.id}" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy_#{post.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h2>New Book</h2>

<%= render 'form', post: @post %>

