<%= form_with(model: post, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class:"book_title" %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, class:"book_body" %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Book'%>
  </div>
<% end %>
